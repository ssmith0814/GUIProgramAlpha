<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
         prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.181"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <tabs>
        <Tab text="Product Line">
            <content>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <GridPane layoutX="15.0" layoutY="-5.0" prefHeight="162.0" prefWidth="572.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label prefHeight="57.0" prefWidth="138.0" text="Product Name"/>
                                <Label text="Manufacturer" GridPane.rowIndex="1"/>
                                <Label text="Item Type" GridPane.rowIndex="2"/>
                                <TextField fx:id="ProductNameText" GridPane.columnIndex="1"/>
                                <TextField fx:id="ManufacturerText" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <ChoiceBox fx:id="ItemTypeChoiceBox" prefHeight="25.0" prefWidth="287.0"
                                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                        <Button fx:id="AddProductButton" layoutX="260.0" layoutY="157.0" mnemonicParsing="false"
                                onAction="#AddProductBtn" text="Add Product"/>
                        <TableView fx:id="ProductLineTableView" layoutX="62.0" layoutY="226.0" prefHeight="132.0"
                                   prefWidth="479.0">
                            <columns>
                                <TableColumn fx:id="NameColumn" prefWidth="134.0" text="Name"/>
                                <TableColumn fx:id="ManufacturerColumn" prefWidth="127.0" text="Manufacturer"/>
                                <TableColumn fx:id="ItemTypeColumn" prefWidth="75.0" text="Item Type"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <Label layoutX="256.0" layoutY="209.0" text="Existing Products"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Produce">
            <content>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <Label layoutX="254.0" layoutY="249.0" prefHeight="25.0" prefWidth="92.0"
                               text="Choose Quantity"/>
                        <Button fx:id="RecordProductionsBtn" layoutX="243.0" layoutY="323.0" mnemonicParsing="false"
                                onAction="#RecordProductionsBtnPressed" text="Record Production"/>
                        <ComboBox fx:id="QuantityComboBox" editable="true" layoutX="201.0" layoutY="274.0"
                                  prefHeight="25.0" prefWidth="198.0"/>
                        <ListView fx:id="ProduceListView" layoutX="82.0" layoutY="39.0" prefHeight="200.0"
                                  prefWidth="437.0"/>
                        <Label layoutX="258.0" layoutY="14.0" text="Choose Product"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Production Log">
            <content>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <TextArea fx:id="ProductionLogTextArea" layoutX="14.0" layoutY="14.0" prefHeight="333.0"
                                  prefWidth="573.0"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
